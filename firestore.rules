
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // âœ… Define Admin UID(s)
    function isAdmin() {
      return request.auth != null && request.auth.uid == "zU571xDn7JO8eLLGvNlcmTMcxby1";
    }

    // ðŸ”“ Public Read Access (No edits allowed)
   match /academic/{docId} {
  allow read: if true;
  allow update: if request.resource.data.diff(resource.data).changedKeys().hasOnly(['rating', 'ratingCount', 'views']);
  allow create, delete: if isAdmin();
}

    match /classrooms/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /professors/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ðŸ“© Messages: Anyone can create, no one can read/edit/delete
    match /messages/{messageId} {
      allow create: if isContactMessageValid();
      allow read, update, delete: if false;
    }

    // âœ… Admin Full Access (Optional: fallback)
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // ðŸ§  Validate contact form format
    function isContactMessageValid() {
      let data = request.resource.data;
      return (
        data.keys().hasAll(['name', 'email', 'message', 'timestamp']) &&
        data.size() == 4 &&
        data.name is string && data.name.size() > 0 && data.name.size() < 100 &&
        data.email is string && data.email.size() > 0 && data.email.size() < 100 &&
        data.message is string && data.message.size() > 0 && data.message.size() < 5000 &&
        data.timestamp == request.time
      );
    }
  }
}

